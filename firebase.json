{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
        "source": "/",
        "predeploy": ["npm run lint:functions", "npm run build:functions"]
    },
    "hosting": {
        "public": "public",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "/classes",
                "function": "classes"
            },
            {
                "source": "/roster",
                "function": "roster"
            },
            {
                "source": "/emails",
                "function": "emails"
            },
            {
                "source": "/tshirts",
                "function": "tshirts"
            },
            {
                "source": "/signIn",
                "function": "signIn"
            },
            {
                "source": "/importEnrollment",
                "function": "importEnrollment"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "storage": {
        "rules": "storage.rules"
    },
    "emulators": {
        "functions": {
            "port": 5001
        },
        "firestore": {
            "port": 8080
        },
        "ui": {
            "enabled": true
        }
    }
}
