{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Firebase Functions",
            "type": "node",
            "request": "attach",
            "restart": true,
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "sourceMaps": true,
            "preLaunchTask": "Start Functions Emulator",
            "postDebugTask": "Kill Firebase Tasks"
        }
    ]
}