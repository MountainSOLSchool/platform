{
    "name": "portal",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "apps/portal/src",
    "prefix": "sol",
    "targets": {
        "build": {
            "executor": "@angular-devkit/build-angular:browser",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/apps/portal",
                "index": "apps/portal/src/index.html",
                "main": "apps/portal/src/main.ts",
                "polyfills": "apps/portal/src/polyfills.ts",
                "tsConfig": "apps/portal/tsconfig.app.json",
                "assets": [
                    "apps/portal/src/favicon.ico",
                    "apps/portal/src/assets",
                    {
                        "glob": "**/*",
                        "input": "libs/header/src/lib/assets/",
                        "output": "./assets/header/"
                    }
                ],
                "styles": [
                    "apps/portal/src/custom-theme.scss",
                    "apps/portal/src/styles.css",
                    "node_modules/primeflex/primeflex.css",
                    "node_modules/primeicons/primeicons.css",
                    "node_modules/primeng/resources/primeng.min.css",
                    "node_modules/primeng/resources/themes/lara-light-blue/theme.css"
                ],
                "scripts": []
            },
            "configurations": {
                "production": {
                    "budgets": [
                        {
                            "type": "initial",
                            "maximumWarning": "1mb",
                            "maximumError": "2mb"
                        },
                        {
                            "type": "anyComponentStyle",
                            "maximumWarning": "2kb",
                            "maximumError": "4kb"
                        }
                    ],
                    "fileReplacements": [
                        {
                            "replace": "apps/portal/src/environments/environment.ts",
                            "with": "apps/portal/src/environments/environment.prod.ts"
                        }
                    ],
                    "outputHashing": "all"
                },
                "development": {
                    "buildOptimizer": false,
                    "optimization": false,
                    "vendorChunk": true,
                    "extractLicenses": false,
                    "sourceMap": true,
                    "namedChunks": true,
                    "baseHref": "/"
                },
                "developmentRemoteFunctions": {
                    "buildOptimizer": false,
                    "optimization": false,
                    "vendorChunk": true,
                    "extractLicenses": false,
                    "sourceMap": true,
                    "namedChunks": true,
                    "baseHref": "/",
                    "fileReplacements": [
                        {
                            "replace": "apps/portal/src/environments/environment.ts",
                            "with": "apps/portal/src/environments/environment.default.ts"
                        }
                    ]
                }
            },
            "defaultConfiguration": "production"
        },
        "serve": {
            "executor": "@angular-devkit/build-angular:dev-server",
            "configurations": {
                "production": {
                    "browserTarget": "portal:build:production"
                },
                "development": {
                    "browserTarget": "portal:build:development"
                },
                "developmentRemoteFunctions": {
                    "browserTarget": "portal:build:developmentRemoteFunctions"
                }
            },
            "defaultConfiguration": "development"
        },
        "extract-i18n": {
            "executor": "@angular-devkit/build-angular:extract-i18n",
            "options": {
                "browserTarget": "portal:build"
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "options": {
                "lintFilePatterns": [
                    "apps/portal/src/**/*.ts",
                    "apps/portal/src/**/*.html"
                ]
            },
            "outputs": ["{options.outputFile}"]
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/apps/portal"],
            "options": {
                "jestConfig": "apps/portal/jest.config.ts",
                "passWithNoTests": true
            }
        }
    },
    "tags": []
}
