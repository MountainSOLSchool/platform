{
    "extends": ["plugin:cypress/recommended", "../../.eslintrc.json"],
    "ignorePatterns": ["!**/*"],
    "overrides": [
        {
            "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
            "rules": {}
        },
        {
            "files": ["*.ts", "*.tsx"],
            "extends": [
                "eslint:recommended",
                "plugin:eslint-comments/recommended"
            ],
            "rules": {
                "eslint-comments/no-use": [
                    "warn",
                    {
                        "allow": []
                    }
                ]
            }
        }
    ]
}
